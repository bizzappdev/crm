        <!-- mail.template for Helpdesk Tickets -->
        <record id="crm_helpdesk_notify_responsible" model="mail.template">
            <field name="name">New Ticket on CRM Helpdesk assigned to you</field>
            <field name="model_id" ref="model_crm_helpdesk"/>
            <field name="email_from">${object.company_id.name} &lt;${object.categ_id and object.categ_id.email or object.company_id.email}&gt;</field>
            <field name="email_to">${object.user_id.email or object.user_id.partner_id and object.user_id.partner_id.email}</field>
            <field name="subject">Ihnen wurde ein neues Support Ticket zugewiesen:</field>
            <field name="lang">${object.partner_id.lang.code}</field>
            <field name="body_html"><![CDATA[
<p>New Ticket [#${object.ticket_id}] on CRM Helpdesk assigned to you!</p>

<p>Beschreibung: ${object.name}</p>
]]>
            </field>
        </record>
