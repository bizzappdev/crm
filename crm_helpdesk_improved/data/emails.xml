            <field name="email_to">${object.partner_id and object.partner_id.email}</field>
            <field name="subject">[#${object.ticket_id}] Beschreibung: ${object.name}</field>
            <field name="lang">${object.partner_id.lang.code}</field>
            <field name="auto_delete" eval="False"/>
